{
  "name": "wally",
  "version": "1.0.0",
  "description": "WordPress theme for the veronicaurbano.it website.",
  "author": "Carmine Colicino",
  "license": "GPL-2.0-or-later",
  "keywords": [
    "WordPress",
    "Theme"
  ],
  "homepage": "https://github.com/colis/wally",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/colis/wally"
  },
  "bugs": {
    "url": "https://github.com/colis/wally/issues"
  },
  "devDependencies": {
    "@wordpress/scripts": "^8.0.1",
    "node-sass": "^4.13.1",
    "rtlcss": "^2.5.0"
  },
  "rtlcssConfig": {
    "options": {
      "autoRename": false,
      "autoRenameStrict": false,
      "blacklist": {},
      "clean": true,
      "greedy": false,
      "processUrls": false,
      "stringMap": []
    },
    "plugins": [],
    "map": false
  },
  "scripts": {
    "compile:css": "node-sass sass/style.scss style.css && node-sass sass/woocommerce.scss woocommerce.css && stylelint '*.css' --fix || true && stylelint '*.css' --fix",
    "compile:rtl": "rtlcss style.css style-rtl.css",
    "lint:scss": "wp-scripts lint-style 'sass/**/*.scss'",
    "lint:js": "wp-scripts lint-js 'js/*.js'"
  }
}
